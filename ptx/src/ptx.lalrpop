SectionDwarfLines: () = {
    AnyBitType CommaNonEmpty<U32Num> => {},
    SectionLabel ":",
    ".b32" SectionLabel,
    ".b64" SectionLabel,
    ".b32" SectionLabel "+" U32Num,
    ".b64" SectionLabel "+" U32Num,
