MemberOperand: (&'input str, u8) = {
    <pref:ExtendedID> "." <suf:ExtendedID> => {
        let suf_idx = match vector_index(suf) {
            Ok(x) => x,
            Err(err) => {
                errors.push(err);
                0
            }
        };
        (pref, suf_idx)
    },
    <pref:ExtendedID> <suf:DotID> => {
        let suf_idx = match vector_index(&suf[1..]) {
            Ok(x) => x,
            Err(err) => {
                errors.push(err);
                0
            }
        };
        (pref, suf_idx)
    }
};

