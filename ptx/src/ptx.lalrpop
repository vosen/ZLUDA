            .map(|args| {
                args.into_iter()
                    .map(|var| (var.type_, var.state_space))
                    .collect()
            })
            .unwrap_or(Vec::new());
        let input_arguments = input_arguments
            .into_iter()
            .map(|var| (var.type_, var.state_space))
            .collect();
        ast::Callprototype {
            name,
            return_arguments,
            input_arguments
        }
    }
};

