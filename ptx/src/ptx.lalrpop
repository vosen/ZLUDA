        let arg = ast::Arg2St { src1, src2 };
        ast::Instruction::Red(atom_details, arg)
    },
    "red" <space:AtomSpace> ".add" <typ:FloatType> <src1:MemoryOperand> "," <src2:SrcOperandVec> => {
        let op = ast::AtomFloatOp::Add;
        let atom_details = ast::AtomDetails {
